
{{> layout}}
<article>
    <h1>{{post.title}}</h1>
    <p>{{post.content}}</p>
    <footer>
        <p>Posted by {{post.username}} {{format_date post.createdAt}}</p>
    </footer>
    <section id="comments">
        <h2>Comments</h2>
        {{#each comments}}
            <div class="comment">
                <p>{{this.content}}</p>
                <p>Comment by {{this.username}} {{this.createdAt}}</p>
             </footer>
            </div>
        {{else}}
            <p>No comments yet. Be the first to comment!</p>
        {{/each}}
    </section>
    {{#if logged_in}}
        <form id="comment-form" method="post" action="/comment/{{post.id}}">
            <textarea name="comment" placeholder="Enter your comment here" required></textarea>
            <button type="submit">Submit</button>
        </form>
    {{/if}}
</article>
