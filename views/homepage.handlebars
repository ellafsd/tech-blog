{{!-- Check if there are any posts --}}
{{#if posts.length}}
  {{#each posts}}
    <article class="post-container">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <p>Posted by {{this.user.username}} on {{formatDate this.createdAt}}</p>
      <a href="/post/{{this.id}}"></a>
    </article>
  {{/each}}
{{else}}
  <p>No posts found.</p>
{{/if}}
